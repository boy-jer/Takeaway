<%= form_for @customer do |f| %>
	<%= display_order_field? %>
	<%= hidden_field_tag 'restaurant', @restaurant.name %>
	<div id="column_left">
		<div class="field">
			<div class="field_label">
			<%= label_tag "Name" %>
			</div>
			<div class="field_input">
			<%= f.text_field :name %>
			</div>
		</div>
		<div class="field">
			<div class="field_label">
			<%= label_tag "Phone Number" %>
			</div>
			<div class="field_input">
			<%= f.text_field :phone_number %>
			</div>
		</div>
		<div class="field">
			<div class="field_label">
			<%= label_tag "Email address" %>
			</div>
			<div class="field_input">
			<%= f.text_field :email %>
			</div>
		</div>
	</div>
	<div id="column_right">
		<div class="field">
			<div class="field_label">
			<%= label_tag "Address1" %>
			</div>
			<div class="field_input">			
			<%= text_field_tag 'customer[address][address1]', customer_address_info(@customer, 'address1') %>
			</div>
		</div>
		<div class="field">
			<div class="field_label">
			<%= label_tag "Address2" %>
			</div>
			<div class="field_input">
			<%= text_field_tag 'customer[address][address2]', customer_address_info(@customer, 'address2') %>
			</div>
		</div>
		<div class="field">
			<div class="field_label">
			<%= label_tag "Town / City" %>
			</div>
			<div class="field_input">
			<%= text_field_tag 'customer[address][town_city]', customer_address_info(@customer, 'town_city') %>
			</div>
		</div>
		<div class="field">
			<div class="field_label">
			<%= label_tag "Postcode" %>
			</div>
			<div class="field_input">
			<%= text_field_tag 'customer[address][postcode]', customer_address_info(@customer, 'postcode') %>
			</div>
		</div>
		
		<%= display_password_fields(@customer) do %>
		<div id="password_fields">
				<div class="field">
					<div class="field_label">
					<%= label_tag "Password" %>
					</div>
					<div class="field_input">
					<%= password_field_tag 'customer[password]' %>
					</div>
				</div>
				<div class="field">
					<div class="field_label">
					<%= label_tag "Confirm Password" %>
					</div>
					<div class="field_input">				
					<%= password_field_tag 'customer[password_confirmation]' %>
					</div>
				</div>
		</div>
		<% end %>
		
	</div>
	<div class="submit_button confirm sign_up" id="new_customer_submit_button">
	<%= render_submit_button(@customer) %>
	</div>
<% end %>